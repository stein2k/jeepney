{
    "compilerOptions": {
        "baseUrl": ".",
        "experimentalDecorators": true,
        "module": "amd",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "paths": {
            "jeepney/base/*": [
                "./jeepney/base/*"
            ],
            "jeepney/core/*": [
                "./jeepney/core/*"
            ],
            "jeepney/platform/*": [
                "./jeepney/platform/*"
            ],
            "jeepney/workbench/*": [
                "./jeepney/workbench/*"
            ]
        },
        "preserveConstEnums": true,
        "outDir": "./out",
        "removeComments": true,
        "sourceMap": true,
        "target": "ES6",
        "lib": ["dom", "es5", "es2015.iterable"]

    },
    "include": ["./jeepney/base", "./jeepney/core", "./jeepney/platform", "./jeepney/workbench", "./typings"]
}