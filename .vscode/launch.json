{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
			"type": "node",
			"request": "launch",
			"name": "Gulp Build",
			"program": "${workspaceFolder}/node_modules/gulp/bin/gulp.js",
			"stopOnEntry": false,
			"args": [
				"compile-typescript"
			]
        },
        {
			"type": "node",
            "request": "launch",
            "args": [
                "--remote-debugging-port=9222"
            ],
            "cwd": "${workspaceFolder}",
            "name": "Launch Jeepney (Main Process)",
            "outFiles": [
                "${workspaceFolder}/out/**/*.js",
                "${workspaceFolder}/out/*.js"
			],
            "program": "${workspaceFolder}/src/main.js",
            "protocol": "inspector",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
            "sourceMaps": true,
			"stopOnEntry": true
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Jeepney",
            "port": 9222
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ],
            "program": "${workspaceFolder}/src/main",
            "sourceMaps": true
        }
    ],
    "compounds": [
        {
            "name": "Debug Jeepney Main and Renderer",
            "configurations": [
                "Launch Jeepney (Main Process)",
                "Attach to Jeepney"
            ]
        }
    ]
}